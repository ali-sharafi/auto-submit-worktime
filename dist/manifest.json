{
	"manifest_version": 3,
	"name": "Translator",
	"description": "Add your new vocabulary to learning docs",
	"version": "1.0",
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"/js/app.js"
			],
			"css": [
				"/css/app.css"
			]
		}
	],
	"permissions": [
		"webRequest",
		"tabs",
		"scripting"
	],
	"host_permissions": [
		"*://*/*"
	],
	"action": {
		"default_icon": "icon.png",
		"default_title": "Translator"
	}
}